{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "moduleResolution": "node",
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "!././node_modules/**/*.ts",
    "!./typings/main",
    "!./typings/main.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true
  }
}
